{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "typeRoots": ["./types"],
    "baseUrl": "./src",
    "isolatedModules": true
  },
  "exclude": ["node_modules", "__generated__"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/_app.jsx",
    "pages/notes.jsx",
    "src/components/Notes.jsx",
    "src/context/notes.jsx", "pages/add.jsx", "pages/search.jsx", "src/components/Navbar.jsx", "src/components/UserSelect.jsx"
  ]
}
